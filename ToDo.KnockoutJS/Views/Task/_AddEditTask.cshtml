@{
    Layout = null;
}

<div class="modal fade" id="addedit-task-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewData["Title"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form data-bind="submit: saveTask">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="mb-2">Description</label>
                        <input class="form-control" data-bind="value: description" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/ViewModels/AddEditTaskViewModel.js" type="text/javascript"></script>